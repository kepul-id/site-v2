---
const { step } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{step.name}</h4>
      <p class="mt-3 text-4xl font-bold text-black md:text-4xl">{ step.step }</p>
      <br/>
      <span class="flex items-start gap-3 text-gray-800">{ step.desc }</span>
    </div>
  </div>
</div>
