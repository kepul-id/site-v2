---
import { Picture } from "astro:assets";

const { step } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 rounded-md">
    <div class="w-full aspect-square">
      <Picture
        src={step.img}
        alt={step.name}
        sizes="(max-width: 800px) 100vw, 400px"
        width={400}
        height={400}
        class="w-full rounded-sm transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
      />
    </div>

    <div class="text-center py-5 px-6">
      <h4 class="text-lg font-medium text-gray-400">{step.name}</h4>
      <p class="mt-3 text-2xl font-bold text-black md:text-4xl">{ step.step }</p>
      <br/>
      <span class="flex items-start gap-3 text-gray-800">{ step.desc }</span>
    </div>
  </div>
</div>
